include mixins/mixins

doctype html

html(lang="en-US")

  head
  
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    block metas

    block title
    
    link(href='data:image/x-icon;', type='image/x-icon', rel='shortcut icon') 
    intercept-url(pattern="/favicon.ico" access="ROLE_ANONYMOUS")
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/main1.css', rel='stylesheet')
    block links

    script(src='/javascripts/jquery-min-3.1.1.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    block headScripts

  body

    .wrapper

      header
        .header

          nav.navbar.navbar-default.navbar-static-top
            .container

              .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false',  aria-controls='navbar')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.brand(href='/')
                  <!-- img(width="225" src="/images/logo-2016-2.png") -->

              if currentUser
                - var username = currentUser.name()

              .navbar-collapse.collapse(id='navbar', aria-expanded='false', style='height: 1px;')
                ul.nav.navbar-nav.navbar-right

                  if currentUser

                    if reqUrl !== '/userhome'
                      li 
                        a.navbar-link(href='/userhome', data-toggle='collapse', data-target='.navbar-collapse.in') Home

                    if reqUrl !== '/membersonly'
                      li 
                        a.navbar-link(href='/membersonly', data-toggle='collapse', data-target='.navbar-collapse.in') Members Only!

                    li 
                      a.login-link(href='/logout', data-toggle='collapse', data-target='.navbar-collapse.in') Log Out


                  else

                    if reqUrl !== '/'
                      li 
                        a.navbar-link(href='/', data-toggle='collapse', data-target='.navbar-collapse.in') Home

                    if reqUrl !== '/membersonly'
                      li 
                        a.navbar-link(href='/membersonly', data-toggle='collapse', data-target='.navbar-collapse.in') Members Only!

                    if reqUrl !== '/login'
                      li 
                        a.login-link(href='/login', data-toggle='collapse', data-target='.navbar-collapse.in') Log In

                    if reqUrl !== '/signup'
                      li 
                        a.signup-link(href='/signup', data-toggle='collapse', data-target='.navbar-collapse.in') Sign Up
      



      .view

        script.
          var is_safari = (navigator.userAgent.indexOf('Safari') != -1 && navigator.userAgent.indexOf('Chrome') == -1)

        block content



      footer
